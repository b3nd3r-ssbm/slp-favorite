{
  "name": "slp-favorite",
  "version": "1.0.0",
  "main": "main.js",
  "author": "b3nd3r_ssbm",
  "description": "GPL-3.0-or-later",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Slp Favorite",
    "appId": "com.b3nd3rssbm.slpfavorite",
    "files": [
      "index.html",
      "main.js",
      "icon.png"
    ],
    "artifactName": "Slippi-Light-${version}-${os}.${ext}",
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "portable",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "dmg": {
      "icon": "./icon.png"
    },
    "nsis": {
      "unicode": "false"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/b3nd3r-ssbm/slp-favorite.git"
  },
  "dependencies": {
    "@slippi/slippi-js": "^5.0.5",
    "ejs": "^3.1.3",
    "electron-store": "^6.0.0",
    "path": "^0.12.7",
    "underscore": "^1.10.2"
  },
  "devDependencies": {
    "electron": "^9.1.1",
    "electron-builder": "^22.8.0"
  }
}
